{
  "name": "nodejs-ts-project",
  "version": "1.0.0",
  "description": "",
  "main": "prod/index.js",
  "scripts": {
    "build": "mkdir -p lib/schema; cp src/schema/*.graphql lib/schema/ && npm run generate:graphql && npx tsc",
    "start": "npx cross-env NODE_ENV=production node prod/index.js",
    "test": "npx jest",
    "dev": "npx tsc-watch --onSuccess 'npm start'",
    "generate:graphql": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zolbooo/nodejs-ts-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "boilerplate",
    "eslint"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "author": "Zolboobayar Gantumur <zolboobayar@nhs.edu.mn>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zolbooo/nodejs-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/zolbooo/nodejs-ts-boilerplate#readme",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.10",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-resolvers": "^1.17.10",
    "@nicepack/eslint-ts": "^1.3.1",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "_moduleAliases": {
    "@": "prod"
  }
}
